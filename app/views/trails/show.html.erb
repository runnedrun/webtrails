<script type="text/javascript">
  var requestUrl = "<%= Webtrails::Application::AJAX_REQUEST_URL %>";
  var siteIDs = [ <%- @favicon_urls_with_ids_and_titles.each do |favicon_url_and_id|%>
    "<%= favicon_url_and_id[1] %>",
  <%- end %>
  ];
</script>
<script src="/bootstrap/js/bootstrap.min.js"> </script>
<link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen">

<div class="siteDisplayDiv">
  <%- @sites.each_with_index do |site,i| %>
    <iframe id=<%= site.id %> class="siteDisplay notCurrent"></iframe>
  <%- end %>
</div>

<div class="noteLists">
  <%- @site_note_hash.each do |site_id, note_contents_and_id| %>
      <div class="noteList" id=site<%= site_id %>>
        <%- note_contents_and_id.each do |content, id| %>
            <div class="noteWrapper">
                <div class="noteContent" id="note<%= id %>"><%= content %></div>
            </div>
        <%-	end %>
      </div>
  <%- end %>
</div>
<div class="viewTrailToolbar">


<button class="btn btn-mini chevronButton" id="previousSite"> <i class="icon-chevron-left"> </i> </button>
<div class="siteFaviconsHolder">
  <div class="siteFavicons">
      <%- @favicon_urls_with_ids_and_titles.each_with_index do |favicon_id_and_title,i| %>
          <img class="faviconImage" src="<%= favicon_id_and_title[0] %>" id="favicon<%= favicon_id_and_title[1] %>" data-ot="<%= @sites[i].title%>" data-ot-delay="0" data-ot-tip-joint="bottom" data-ot-style="dark" data-site-url="<%= @sites[i].url%>" data-site-index="<%= i %>"/>
      <%- end %>
  </div>
</div>
<button class="btn btn-mini chevronButton" id="nextSite"> <i class="icon-chevron-right"> </i> </button>

<a class="btn btn-alert btn-mini navigateButton" id="goToSite" href="<%= @sites[0].url unless @sites.empty?%>" target="_blank">Visit Site</a>

<button class="btn btn-info navigateButton" id="previousNote">Previous</button>
<button class="btn btn-success navigateButton" id="nextNote"><b>Next</b></button>

<button id="showAllSitesButton" class="btn btn-warning navigateButton showList">Show all Sites</button>
<button class="btn btn-warning navigateButton showList" id="showNoteList" href="#">Show note list</button>

</div>
